<div class="mb-6 flex items-center justify-between">
  <h1 class="text-3xl font-bold">Articles</h1>

  <button class="cursor-pointer px-3 py-2 bg-primary text-white rounded hover:bg-primary-hover transition ease-in-out duration-100">
    <%= link_to "New Article", new_article_path %>
  </button>
</div>

<div class="grid grid-cols-3 grid-flow-row gap-3">
  <% @articles.each do |article| %>
    <%= link_to article, class: "hover:scale-105 transition ease-in-out duration-300" do %>
      <div class="p-6 bg-white border-2 rounded">
        <h2 class="mb-2 border-b-[1px] font-semibold"><%= article.title %></h2>
        <div>
          <p class="tracking-wide text-gray-500 overflow-hidden whitespace-nowrap text-ellipsis"><%= article.body %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
