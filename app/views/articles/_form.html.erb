<%= form_with model: article, class: "mb-3 bg-white p-3 border-[1px] border-gray-200 rounded-lg shadow-md" do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "mb-1 font-semibold" %>
    <%= form.text_field :title, class: "px-3 py-2 w-full border-[1px] border-gray-300 rounded focus:outline-none focus:shadow-form" %>
    
    <% unless article.errors.size < 1 %>
      <span class="text-red-500"><%= article.errors.full_messages_for(:title).join(", ") %></span>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: "mb-1 font-semibold" %>
    <%= form.text_area :body, class: "px-3 py-2 w-full h-64 border-[1px] border-gray-300 rounded focus:outline-none focus:shadow-form" %>
    
    <% unless article.errors.size < 1 %>
      <span class="text-red-500"><%= article.errors.full_messages_for(:body).join(", ") %></span>
    <% end %>
  </div>

  <div>
    <%= form.submit class: "cursor-pointer px-3 py-2 bg-primary text-white rounded hover:bg-primary-hover transition ease-in-out duration-300" %>
  </div>
<% end %>
