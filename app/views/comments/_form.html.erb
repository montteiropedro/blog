<%= form_with model: [ @article, @article.comments.build ], class: "mb-3 bg-white p-3 border-[1px] border-gray-200 rounded-lg shadow-md" do |form| %>
  <div class="mb-3">
    <%= form.label :commenter, "Author", class: "mb-1 font-semibold" %>
    <%= form.text_field :commenter, class: "px-3 py-2 w-full border-[1px] border-gray-300 rounded focus:outline-none focus:shadow-form" %>
  </div>

  <div class="mb-3">
    <%= form.label :body, "Comment", class: "mb-1 font-semibold" %>
    <%= form.text_area :body, class: "px-3 py-2 w-full h-20 border-[1px] border-gray-300 rounded focus:outline-none focus:shadow-form" %>
  </div>

  <div>
    <%= form.submit class: "cursor-pointer px-3 py-2 bg-primary text-white rounded hover:bg-primary-hover transition ease-in-out duration-300" %>
  </div>
<% end %>
